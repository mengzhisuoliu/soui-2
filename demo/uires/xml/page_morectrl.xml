<window size="-2,-2" layout="vbox" interval="10">
	<window size="-2,-1" layout="hbox" gravity="center" interval="5">
		<text text="menubar:"/>
		<menubar size="-1,30">
			<btnStyle2 skin="SKIN_MENU_BTN" />
			<menus>
				<menuItem src="SMENU:MENU_FILE">文件(&F)</menuItem>
				<menuItem src="SMENU:MENU_EDIT">编辑(&E)</menuItem>
				<menuItem src="SMENU:MENU_HELP">帮助(&H)</menuItem>
			</menus>
		</menubar>
	</window>
	<chromeTabCtrl size="-2,40" name="chromeTab" tabDesiredSize="200" enableDrag="1">
		<tabStyle skin="_skin.sys.btn.normal"/>
		<newBtnStyle size="40,30" skin="skin_chrome_tab_new"/>
		<closeBtnStyle pos="-2,2" offset="-1,0" skin="skin_chrome_tab_close"/>
		<tabs>
			<chromeTab tip="the tab #1">tab1</chromeTab>
			<chromeTab tip="the tab #2">tab2</chromeTab>
			<chromeTab tip="the tab #3">tab3</chromeTab>
		</tabs>
	</chromeTabCtrl>
	<window size="-1,-1" layout="hbox" interval="10">
		<imgknob size="80,80"  skin="skin_knob" min="0" max="1" value="0.5"/>
		<imgknob size="80,80"  skin="skin_knob" min="0" max="1" value="0"/>
	</window>
</window>